{
  "labels": ["Dependencies"],
  "rebaseWhen": "conflicted",
  "automerge": true,
  "semanticCommits": "enabled",
  "extends": [
    "config:best-practices"
  ],
  "schedule": ["on sunday"],
  "includePaths": [
    "buildSrc/gradle/**",
    "buildSrc/*.gradle.kts",
    "gradle/**",
    "*.gradle.kts",
    ".github/**"
  ],
  "ignoreDeps": [
    "aniyomiorg/issue-moderator-action",
    "com.github.null2264.injekt:injekt-core"
  ],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "groupName": "{{manager}} dependencies"
    },
    {
      "matchManagers": ["gradle"],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "com.android.tools.build:gradle",
        "gradle"
      ],
      "draftPR": true,
      "enabled": true
    }
  ]
}
